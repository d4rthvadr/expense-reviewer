{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@db/*": ["src/db/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["src/config/*"],
      "@infra/*": ["src/infra/*"],
      "@libs/*": ["src/libs/*"],
      "@tests/*": ["tests/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "typeCheck": true
  }
}
